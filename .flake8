[flake8]
min_python_version = 3.8
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # don't check the python libraries
    venv
extend-ignore =
    # whitespace before ‘:’
    E203,
    # line too long -> Covered by black!
    E501,
